    "auto_cleanup_old_memories": true,
    "memory_priority": "normal"
  },
  "channels": {
    "preferred_channels": [],
    "ignore_channels": [],
    "auto_monitor_channels": true
  },
  "custom": {
    "timezone": "UTC",
    "language": "en",
    "theme_preference": "auto"
  }
}